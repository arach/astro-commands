{
    "compilerOptions": {
        "target": "ESNext", // Compile to a modern ECMAScript version
        "module": "ESNext", // Use modern module system
        "moduleResolution": "node", // Use Node.js-style module resolution
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Allow default imports from modules with no default export
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
        "outDir": "./dist", // Redirect output structure to the directory
        "rootDir": "./src", // Specify the root directory of input files
        "allowJs": true, // Allow JavaScript files to be compiled
        "declaration": true // Generate corresponding '.d.ts' file
    },
    "include": [
        "src/**/*" // Include all files in the src folder
    ],
    "exclude": [
        "node_modules", // Exclude the node_modules directory
        "**/*.test.ts" // Exclude test files
    ]
}